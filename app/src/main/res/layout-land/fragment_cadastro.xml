<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.CadastroFragment">

    <View
        android:id="@+id/view12"
        android:layout_width="498dp"
        android:layout_height="360dp"
        android:layout_marginTop="16dp"
        android:background="@color/primaryLightColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="508dp"
        android:layout_height="358dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="1dp"
                android:text="@string/cadastrar_view"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/nomeCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autofillHints="@string/nome_completo"
                android:elevation="1dp"
                android:hint="@string/nome_completo"
                android:inputType="textPersonName"
                android:textColor="@color/primaryTextColor"
                android:textColorHint="@color/primaryTextColor" />

            <EditText
                android:id="@+id/steamCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:autofillHints="@string/steam_id"
                android:elevation="1dp"
                android:hint="@string/steam_id"
                android:inputType="textPersonName"
                android:textColor="@color/primaryTextColor"
                android:textColorHint="@color/primaryTextColor" />

            <EditText
                android:id="@+id/emailCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:autofillHints="@string/e_mail"
                android:elevation="1dp"
                android:hint="@string/e_mail"
                android:inputType="textEmailAddress"
                android:textColor="@color/primaryTextColor"
                android:textColorHint="@color/primaryTextColor" />

            <EditText
                android:id="@+id/senhaCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:autofillHints="@string/senha"
                android:elevation="1dp"
                android:hint="@string/senha"
                android:inputType="textPassword"
                android:textColor="@color/primaryTextColor"
                android:textColorHint="@color/primaryTextColor" />

            <EditText
                android:id="@+id/telefoneCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:autofillHints="@string/telefone"
                android:elevation="1dp"
                android:ems="10"
                android:hint="@string/telefone"
                android:inputType="phone" />

            <EditText
                android:id="@+id/idadeCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:autofillHints="@string/steam_id"
                android:elevation="1dp"
                android:ems="10"
                android:hint="@string/idade"
                android:inputType="number" />

            <Button
                android:id="@+id/enviarBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@color/primaryDarkColor"
                android:contentDescription="@string/botao_salvar"
                android:elevation="1dp"
                android:text="@string/enviar_button"
                android:textColor="@color/primaryTextColor"
                android:textColorHint="@color/primaryTextColor" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>