<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <View
        android:id="@+id/view13"
        android:layout_width="482dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:background="@color/primaryLightColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="482dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="142dp"
                android:layout_height="136dp"
                android:layout_gravity="center"
                android:contentDescription="@string/descicao_foto_perfil"
                android:src="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/nomeText"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="36dp" />

            <TextView
                android:id="@+id/steamText"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/telefoneText"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/idadeText"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/editarBtnDados"
                android:layout_width="54dp"
                android:layout_height="59dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:contentDescription="@string/botao_editar"
                android:focusable="true"
                android:src="@drawable/ic_edit_black_24dp"
                app:backgroundTint="@color/secondaryColor"
                tools:ignore="PrivateResource" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>